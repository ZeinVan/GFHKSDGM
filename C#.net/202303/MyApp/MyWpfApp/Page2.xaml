      xmlns:local="clr-namespace:MyWpfApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*">
            </ColumnDefinition>
            <ColumnDefinition Width="1*">
            </ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*">
            </RowDefinition>
            <RowDefinition Height="1*">
            </RowDefinition>
        </Grid.RowDefinitions>
        <Button Name="btnOne" Height="40" Width="60" Content="btnOne">
        </Button>
        <Button Grid.Column="1" Grid.Row="0" Name="btnTwo" Height="40" Width="60" Content="btnTwo">
        </Button>
        <Button Grid.Column="0" Grid.Row="1" Name="btnThree" Height="40" Width="60" Content="btnThree">
